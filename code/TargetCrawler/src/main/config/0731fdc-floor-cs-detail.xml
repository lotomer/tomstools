<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="   
     http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd   
     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- 待爬取对象：0731fdc 长沙新房咨询-详细户栋。对应 org.tomstools.crawler.config.Target -->
    <bean id="target-0731fdc-floor-cs-detail" class="org.tomstools.crawler.config.Target" scope="prototype">
        <property name="name" value="0731fdc-floor-cs-detail"></property>
        <property name="url" value="http://floor.0731fdc.com/search.php"></property>
        <property name="defaultCharsetName" value="GBK"></property>
        <property name="crawlingRule" ref="crawlingRule"></property>
        <property name="parser" ref="htmlParser"></property>
        <property name="pageFetcher" ref="pageFetcher"></property>
        <property name="completedHandler">
            <!-- 任务完成后需要执行的钩子。对应org.tomstools.crawler.handle.CompletedHandleable -->
            <bean id="shellCompletedHandler" class="org.tomstools.crawler.handle.ShellHandle" scope="prototype">
                <!-- 构造函数参数 1: shell命令。执行时将加上完整的文件名参数 -->
                <constructor-arg index="0" type="java.lang.String" value="${cmd_completed_handler_prefix}\building2db 4301"></constructor-arg>
            </bean>
        </property>
        <property name="contentPageExtractor">
            <bean class="org.tomstools.crawler.extractor.impl.BaseContentPageExtractor" scope="prototype">
                <!-- 构造函数参数 1: 元素选择表达式 -->
                <constructor-arg index="0" type="java.lang.String">
                    <value><![CDATA[div#ddd>div.list-con>dl>dt>ul>li.floorname>a]]></value>
                </constructor-arg>
                <!-- 构造函数参数 2: 子页面url模板 -->
                <constructor-arg index="1" type="java.lang.String">
                    <value><![CDATA[http://floor.0731fdc.com/content/%s.shtml]]></value>
                </constructor-arg>
                <!-- 构造函数参数3: 提取子页面url的正则表达式，与format配合使用，将正则表达式的group数据代入format中以生成完整的子页面url -->
                <constructor-arg index="2" type="java.lang.String">
                    <value><![CDATA[<a\s+?href="info\.php\?id=(\d+?)".*]]></value>
                </constructor-arg>
                <!-- 构造函数参数4: 过滤规则的正则表达式，如果匹配上，则直接过滤不进行子页面的提取 -->
                <constructor-arg index="3" type="java.lang.String">
                    <value><![CDATA[]]></value>
                </constructor-arg>
                <property name="contentPageExtractor">
                    <null></null>
                </property>
            </bean>
        </property>
        <property name="navigationExtractor">
            <bean class="org.tomstools.crawler.extractor.impl.PageNavigationExtractor"
                scope="prototype">
                <!-- 构造函数参数 1: 元素选择表达式 -->
                <constructor-arg index="0" type="java.lang.String">
                    <value><![CDATA[div#page ul.pageno a[title=下一页]]]></value>
                </constructor-arg>
                <!-- 构造函数参数 2: 正则表达式 -->
                <constructor-arg index="1" type="java.lang.String">
                    <value><![CDATA[<a .*?href="(.*?)"]]></value>
                </constructor-arg>
                <!-- 构造函数参数 3: 正则表达式中group的索引号对应的参数名称 -->
                <constructor-arg index="2">
                    <map>
                        <entry key="1"><value><![CDATA[url]]></value></entry>
                    </map>
                </constructor-arg>
            </bean>
        </property>
        <property name="contentExtractor">
            <!-- 内容抽取器。对应 org.tomstools.crawler.extractor.ContentExtractor -->
            <bean class="org.tomstools.crawler.extractor.ContentExtractor" scope="prototype">
                <!-- 构造函数参数 1: 元素选择表达式 -->
                <constructor-arg index="0" type="java.lang.String">
                    <value><![CDATA[div#courses_table>div.item-floor dd]]></value>
                </constructor-arg>
                <!-- 构造函数参数 2: 表头 -->
                <constructor-arg index="1" type="java.lang.String[]">
                    <value><![CDATA[buildings_name,building_name,floor,room,structure_area,inside_area,house_type,purpose,apartment,decorate_status,price]]></value>
                </constructor-arg>
                <!-- 构造函数参数 3: 固定属性配置信息 -->
                <constructor-arg index="2">
                    <list>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[buildings_name]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[div#headleft>div>h1]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数3: 字段拆分器 -->
                            <constructor-arg index="2">
                                <null></null>
                            </constructor-arg>
                        </bean>
                    </list>
                </constructor-arg>
                <!-- 构造函数参数 4: 提取属性配置信息 -->
                <constructor-arg index="3">
                    <list>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[building_name]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(0)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[room]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(1)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[floor]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(2)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[structure_area]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(8)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[inside_area]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(9)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[house_type]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(4)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[purpose]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(5)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[apartment]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(6)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[decorate_status]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(7)]]></value>
                            </constructor-arg>
                        </bean>
                        <bean class="org.tomstools.crawler.extractor.ContentExtractor.OwnTextField">
                            <!-- 构造函数参数 1: 名称 -->
                            <constructor-arg index="0" type="java.lang.String">
                                <value><![CDATA[price]]></value>
                            </constructor-arg>
                            <!-- 构造函数参数 2: 元素选择表达式 -->
                            <constructor-arg index="1" type="java.lang.String">
                                <value><![CDATA[span:eq(3)]]></value>
                            </constructor-arg>
                        </bean>
                    </list>
                </constructor-arg>
            </bean>
        </property>
    </bean>
</beans>
