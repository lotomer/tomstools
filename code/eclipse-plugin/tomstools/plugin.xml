   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.lotomer.plugins.tomstools.preferences.TomsToolPreferencePage"
            id="tomstool.preferences.TomsToolPreferencePage"
            name="%TomsTool">
      </page>
      <page
            class="org.lotomer.plugins.tomstools.preferences.NativePreferencePage"
            id="tomstool.preferences.NativePreferencePage"
            category="tomstool.preferences.TomsToolPreferencePage"
            name="%Native2Ascii">
      </page>
      <page
            class="org.lotomer.plugins.tomstools.preferences.CommandLinePreferencePage"
            id="tomstool.preferences.CommandLinePreferencePage"
            category="tomstool.preferences.TomsToolPreferencePage"
            name="%CommandLine">
      </page>
      <page
            class="org.lotomer.plugins.tomstools.preferences.CopyPathPreferencePage"
            id="tomstool.preferences.CopyPathPreferencePage"
            category="tomstool.preferences.TomsToolPreferencePage"
            name="%CopyPath">
      </page>
      <page
            class="org.lotomer.plugins.tomstools.preferences.OpenInExplorerPreferencePage"
            id="tomstool.preferences.OpenInExplorerPreferencePage"
            category="tomstool.preferences.TomsToolPreferencePage"
            name="%OpenInExplorer">
      </page>
      <page
            class="org.lotomer.plugins.tomstools.preferences.ConvertFileCharsetPreferencePage"
            id="tomstool.preferences.ConvertFileCharsetPreferencePage"
            category="tomstool.preferences.TomsToolPreferencePage"
            name="%ConvertFileCharset">
      </page>
