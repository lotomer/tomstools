<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.popupMenus">         
      <objectContribution
            adaptable="true"
            nameFilter="*"
            id="tomstool.allfile.contribution"                        
            objectClass="org.eclipse.core.runtime.IAdaptable">
         <menu
               label="%TomsTool"
               path="additions"
               id="tomstool.submenu">
            <separator
                  name="mypop">
            </separator>
         </menu>
         <action
               class="org.lotomer.plugins.tomstools.popup.actions.ClassSearch"
               enablesFor="1"
               id="tomstools.classSearch"
               label="%ClassSearch"
               menubarPath="tomstool.submenu/mypop">
         </action>
         <action
               class="org.lotomer.plugins.tomstools.popup.actions.CopyPath"
               enablesFor="*"
               id="tomstool.copyPath"
               label="%CopyPath"
               menubarPath="tomstool.submenu/mypop">
         </action>
         <action
               class="org.lotomer.plugins.tomstools.popup.actions.CommandLine"
               enablesFor="1"
               id="tomstool.commandLine"
               label="%CommandLine"               
               menubarPath="tomstool.submenu/mypop">
         </action>
         <action
               label="%OpenInExplorer"
               class="org.lotomer.plugins.tomstools.popup.actions.OpenInExplorer"
               menubarPath="tomstool.submenu/mypop"
               enablesFor="1"
               id="tomstool.openInExplorer">
         </action>
         <action
               label="%ConvertFileCharset"
               class="org.lotomer.plugins.tomstools.popup.actions.ConvertFileCharset"
               menubarPath="tomstool.submenu/mypop"
               enablesFor="*"
               id="tomstool.convertFileCharset">
         </action>
      </objectContribution>
      <objectContribution
            id="tomstool.propertiesfile.contribution"
            nameFilter="*.properties"
            objectClass="org.eclipse.core.runtime.IAdaptable">         
         <action
               class="org.lotomer.plugins.tomstools.popup.actions.Native2Ascii"
               enablesFor="1"
               id="tomstool.Native2Ascii"
               label="%Native2Ascii"
               menubarPath="tomstool.submenu/mypop">
         </action>
      </objectContribution>
